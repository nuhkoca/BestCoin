{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "branch",
  "rebaseWhen": "conflicted",
  "major": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "digest": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["gradle"],
      "automerge": true
    }
  ]
}
